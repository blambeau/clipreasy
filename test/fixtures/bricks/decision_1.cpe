<process business_id="decision_1" label="Decision Brick Fixture Process (1)" version="0.0.1" status="test">
  <description>A single decision node on a boolean value</description>
  <formaldef>
    <decision business_id="do_it" condition="do_it?">
      <when value="true">
        <activity business_id="true_activity" label="True Activity"/>
      </when>
      <when value="false">
        <activity business_id="false_activity" label="False Activity"/>
      </when>
    </decision>
  </formaldef>
</process>
