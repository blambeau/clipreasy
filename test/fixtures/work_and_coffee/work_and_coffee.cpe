<process business_id="work_and_coffee" identifier="work_and_coffee" label="Work and Coffee Fixture Process" version="0.0.1" status="test">
  <description>Working, drinking, ... until the end of the day</description>
  <formaldef>
    <sequence business_id="main_seq">
      <activity business_id="say_hello" label="Say hello" color="yellow"/>
      <until business_id="until_tired" condition="tired?">
        <parallel business_id="until_tired_par">
          <activity business_id="work" label="Work" color="red"/>
          <sequence business_id="drink_seq">
            <activity business_id="drink" label="Drink coffee" color="cyan"/>
            <decision business_id="too_much_coffee" condition="too_much_coffee?">
              <when value="true" business_id="too_much_coffee_true">
                <activity business_id="go_somewhere" label="Go somewhere..." color="cyan"/>
              </when>
            </decision>
          </sequence>
        </parallel>
      </until>
      <activity business_id="say_goodbye" label="Say goodbye" color="green"/>
    </sequence>
  </formaldef>
</process>
